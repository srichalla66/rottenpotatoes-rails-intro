-#  This file is app/views/movies/index.html.haml
%h2 All Movies

%table#movies.table.table-striped.col-md-12
  %thead
    %tr
      %th {:class => ("hilite bg-warning" if params[:sort_by] == "title")}= link_to 'Movie Title', :id => 'title_header', movies_path(:sort_by => 'title')
      %th Rating
      %th {:class => ("hilite bg-warning" if params[:sort_by] == "release_date")}= link_to 'Release Date', :id => 'release_date_header', movies_path(:sort_by => 'release_date')
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
